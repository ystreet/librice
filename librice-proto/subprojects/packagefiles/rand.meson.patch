@@ -0,0 +1,33 @@
+project('rand-rs', 'rust',
+  version : '0.8.5',
+  meson_version : '>= 1.3.1',
+  default_options : ['buildtype=debugoptimized',
+                     'rust_std=2018'
+                    ]
+)
+
+rustc = meson.get_compiler('rust')
+
+rand_chacha_dep = dependency(
+  'rand_chacha-rs',
+  version : ['>= 0.3.0', '< 0.4']
+)
+rand_core_dep = dependency(
+  'rand_core-rs',
+  version : ['>= 0.6.0', '< 0.7']
+)
+libc_dep = dependency(
+  'libc-rs',
+  version : ['>= 0.2.141', '< 0.3']
+)
+lib = static_library(
+  'rand',
+  'src/lib.rs',
+  rust_args: ['--cfg', 'feature="getrandom"', '--cfg', 'feature="alloc"', '--cfg', 'feature="std"', '--cfg', 'feature="std_rng"'],
+  dependencies: [rand_chacha_dep, rand_core_dep, libc_dep],
+  rust_dependency_map : {}
+)
+
+dep = declare_dependency(link_with : lib)
+meson.override_dependency('rand-rs', dep)
+
