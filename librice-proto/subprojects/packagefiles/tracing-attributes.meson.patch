+project('tracing-attributes-rs', 'rust',
+  version : '0.1.27',
+  meson_version : '>= 1.3.1',
+  default_options : ['buildtype=debugoptimized',
+                     'rust_std=2018'
+                    ]
+)
+
+rustc = meson.get_compiler('rust')
+rust = import('rust')
+
+proc_macro2_dep = dependency(
+  'proc-macro2-rs',
+  version : ['>= 1.0.0', '< 2.0']
+)
+quote_dep = dependency(
+  'quote-rs',
+  version : ['>= 1.0.0', '< 2.0']
+)
+syn_dep = dependency(
+  'syn-rs',
+  version : ['>= 2.0.0', '< 3.0']
+)
+lib = library(
+  'tracing_attributes',
+  'src/lib.rs',
+  # FIXME: rustmod.proc_macro() doesn's seem to work
+  rust_crate_type: 'proc-macro',
+  dependencies: [proc_macro2_dep, quote_dep, syn_dep],
+  rust_dependency_map : {}
+)
+
+dep = declare_dependency(link_with : lib)
+meson.override_dependency('tracing-attributes-rs', dep)
+
